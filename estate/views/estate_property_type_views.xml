<odoo>
    <!--Action for estate property type model-->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--List view for estate property type model-->
    <record id="estate_property_type_list_view" model="ir.ui.view">
        <field name="name">estate.property.type.list.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!--Form view for estate property type model-->
    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"/>
                </sheet>
            </form>
        </field>
    </record>
    <!--Search view for estate property type model-->
    <record id="estate_property_type_search_view" model="ir.ui.view">
            <field name="name">estate.property.type.search</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <search string="Search...">
                    <field name="name"/>
                </search>
            </field>
    </record>
</odoo>